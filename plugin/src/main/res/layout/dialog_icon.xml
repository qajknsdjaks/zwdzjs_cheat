<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_normal"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="40.0dip"
            android:layout_height="40.0dip">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/iv_normal_reddot"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2.0dip"
                android:layout_marginEnd="2.0dip"
                android:scaleType="centerCrop"

                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_fringe_left"
        android:layout_width="28.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="14.0dip"
            android:layout_height="40.0dip">

            <ImageView
                android:id="@+id/iv_fringe_left"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
              />

            <ImageView
                android:id="@+id/iv_fringe_left_reddot"
                android:layout_width="4.0dip"
                android:layout_height="4.0dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1.0dip"
                android:layout_marginEnd="1.0dip"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_fringe_right"
        android:layout_width="28.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="14.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />

            <ImageView
                android:id="@+id/iv_fringe_right_reddot"
                android:layout_width="4.0dip"
                android:layout_height="4.0dip"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1.0dip"
                android:layout_marginTop="1.0dip"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_fringe_top"
        android:layout_width="40.0dip"
        android:layout_height="28.0dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="40.0dip"
            android:layout_height="14.0dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
               />

            <ImageView
                android:id="@+id/iv_fringe_top_reddot"
                android:layout_width="4.0dip"
                android:layout_height="4.0dip"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1.0dip"
                android:layout_marginBottom="1.0dip"
                android:scaleType="centerCrop"
              />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>